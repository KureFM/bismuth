{
  "template": ".bismuth*",
  "settings": {
    "index.refresh_interval": "5s",
    "number_of_shards": 3,
    "number_of_replicas": 1
  },
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": true,
        "omit_norms": true
      },
      "dynamic_templates": [
        {
          "string_fields": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "not_analyzed",
              "ignore_above": 4096
            }
          }
        }
      ]
    }
  }
}
