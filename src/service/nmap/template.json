{
  "template": "nmap*",
  "settings": {
    "index.refresh_interval": "5s"
  },
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": true,
        "omit_norms": true
      },
      "dynamic_templates": [
        {
          "string_fields": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "analyzed",
              "omit_norms": true,
              "fielddata": {
                "format": "disabled"
              },
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed",
                  "ignore_above": 1024
                }
              }
            }
          }
        }
      ],
      "properties": {
        "scan_at": {
          "type": "date",
          "format": "epoch_millis",
          "fields": {
            "raw": {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
