{{#ma-card title='主机列表' padding=false}}
<table class="table table-striped vertical-meddle">
  <thead>
    <tr>
      <th>{{t 'labels.hosts.ipv4'}}</th>
      <th>{{t 'labels.hosts.mac'}}</th>
      <th>{{t 'labels.hosts.vendor'}}</th>
      <th>{{t 'labels.hosts.scanAt'}}</th>
      <th>{{t 'labels.hosts.upReason'}}</th>
      <th>{{t 'labels.hosts.total'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |host|}}
      <tr>
        <th>{{link-to host.ipv4 'hosts.host.ports' host.ipv4}}</th>
        <th><code>{{host.mac}}</code></th>
        <th>{{host.vendor}}</th>
        <th>{{moment-from-now host.scanAt 'LLL'}}</th>
        <th>{{host.upReason}}</th>
        <th>{{host.total}}</th>
      </tr>
    {{/each}}
  </tbody>
</table>
{{/ma-card}}
